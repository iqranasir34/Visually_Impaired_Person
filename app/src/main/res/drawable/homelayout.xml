<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><layer-list>
        <item android:bottom="-10dp" android:left="-10dp" android:right="-10dp"><shape>
            <gradient android:angle="270" android:endColor="#1A1717" android:startColor="#696060" />

            <stroke android:width="10dp" android:color="#0C0000" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    </layer-list></item>
    <item android:state_enabled="true"><layer-list>
        <item android:bottom="-10dp" android:left="-10dp" android:right="-10dp"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#161414" android:startColor="#A09797" />

            <stroke android:width="3dp" android:color="#090707" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    </layer-list></item>

</selector>